<?xml version="1.0"?>
<toolbox>
	<tool>
		<key>date</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.generic.DateTool</class>
		<parameter name="format" value="yyyy-MM-dd HH:mm:ss" />
		<parameter name="locale" value="zh_CN" />
	</tool>
    <tool>
    	<key>cookies</key>
		<scope>request</scope>
        <class>org.apache.velocity.tools.view.CookieTool</class>
    </tool>
	<tool>
		<key>link</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.view.tools.LinkTool</class>
	</tool>
	<tool>
		<key>string</key>
		<scope>request</scope>
		<class>org.apache.velocity.util.StringUtils</class>
	</tool>
	<tool>
		<key>math</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.MathTool</class>
	</tool>
	<tool>
		<key>escape</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.generic.EscapeTool</class>
	</tool>
	<tool>
		<key>parameter</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.view.tools.ParameterParser</class>
	</tool>
</toolbox>